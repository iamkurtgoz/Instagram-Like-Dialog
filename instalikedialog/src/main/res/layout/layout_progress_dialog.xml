<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/custom_instagram_like_dialog_background">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/layout_progress_dialog_lottieView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <ProgressBar
            android:id="@+id/ayout_progress_dialog_progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/layout_progress_dialog_textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YÃ¼kleniyor"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"/>
    </LinearLayout>
</LinearLayout>
